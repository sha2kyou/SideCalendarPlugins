{
    "name": "GitHub 个人事件",
    "description": "获取指定 GitHub 用户的公开活动事件，包括推送、fork、star、issue、PR 等活动。支持 token 认证以获得更高的 API 调用限制。",
    "version": "0.0.7",
    "author": "Sidefy Team",
    "min_support_app_version": "2025.9.0",
    "tags": [
        "GitHub",
        "开发",
        "事件",
        "活动",
        "代码",
        "开发工具"
    ],
    "category": "开发工具",
    "config_options": {
        "username": {
            "type": "string",
            "default": "",
            "required": true,
            "description": "GitHub 用户名"
        },
        "token": {
            "type": "password",
            "default": "",
            "description": "GitHub Personal Access Token（可选）"
        },
        "limit": {
            "type": "number",
            "default": 10,
            "description": "获取事件数量（1-100）"
        }
    },
    "requirements": {
        "network": true,
        "storage": true
    }
}